{
    "manifest_version": 3,
    "name": "GPV Opener",
    "version": "1.1",
    "description": "Open GitHub Profile in GPV",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "action": {
        "default_title": "Open on GPV"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png",
        "512": "images/icon512.png"
    }
}